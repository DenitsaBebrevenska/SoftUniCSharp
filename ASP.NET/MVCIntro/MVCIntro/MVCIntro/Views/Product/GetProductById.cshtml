@model MVCIntro.Models.Product.ProductViewModel
@{
	ViewBag.Tittle = $"Product with Id: {Model.Id}";
}

<div class="card">
	<div class="card-header">@ViewBag.Tittle</div>
	<div class="card-body">
		<h5 class="card-title">Product Name: @Model.Name</h5>
		<p class="card-text">Price: @Model.Price lv.</p>
	</div>
</div>
