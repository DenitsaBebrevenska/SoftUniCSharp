@model SimpleChatApp.Models.Message.ChatViewModel
@(ViewBag.Tittle = "Chat")

<h3>Messages:</h3>

@if (Model.Messages == null)
	{
		<p>No messages yet!</p>
	}
else
{
	foreach(var message in Model.Messages){
		<div class="card .bg-light col-6">
			<div class="card-body">
				<blockquote class="blockquote mb-0">
					<p>@message.Text</p>
					<footer class="blockquote-footer">By @message.Sender</footer>
				</blockquote>
			</div>
		</div>
	}
}
<br/>
<form asp-controller="Chat" asp-action="Send" method="post">
	<div class="form-group card-header row">
		<div class="col-12">
			<h5>Send a new message</h5>
		</div>
		<div class="col-8">
			<label>Message: </label>
			<textarea asp-for="CurrentMessage.Text" class="form-control" rows="3"></textarea>
		</div>
		<div class="col-4">
			<label>Sender: </label>
			<input asp-for="CurrentMessage.Sender" class="form-control" />
			<button class="btn btn-primary mt-2 float-lg-right" type="submit">Send</button>
		</div>
	</div>
</form>

