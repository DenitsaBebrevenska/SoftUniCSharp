@{
	ViewBag.Title = "Product list";
}
@model IEnumerable<ProductViewModel>


<h1>@ViewBag.Title</h1>
<a method="get" asp-controller="Product" asp-action="AddProduct" class="btn btn-primary mb-3">Add a product</a>
<div class="row row-cols-1 row-cols-md-2 g-4">
	@if (!Model.Any())
	{
		<p class="text-danger">No products added yet!</p>
	}
	else
	{
		@foreach (var item in Model)
		{

			<div class="col">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">@item.Name</h5>
						<a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id"class="btn btn-primary">Edit</a>
						<form class="mt-2" asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id">
							<button type="submit" class="btn btn-danger">Delete</button>
						</form>
					</div>
				</div>
			</div>
		}
	}
</div>


